  <div class="section-7 w-container" style="background-color: {{section.settings.background_color}}; padding-top: {{section.settings.padding}}px;padding-bottom: {{section.settings.padding}}px">
    <div class="wrapper-3">
      <div class="side-frame flexcontainer {{section.settings.layout}}">
        <div class="side-feature-media {{section.settings.onscrollimg}}">
          <div class="frame-2 reversed">
            <style>
              .side-frame{
              	{% if section.settings.layout == '_row' %}
                	margin-left: 6%;
                {% else %}
                	margin-right: 6%;
                {% endif %}
              }
              .frame-2{
              	box-shadow: inset 0 0 0 8px {{section.settings.frame_color}};
              }
              @media (max-width: 991px) {
                .side-frame{margin-right: 0%;margin-left: 0%;}
                .frame-2{
                  box-shadow: inset 0 0 0 6px {{section.settings.frame_color}};
                }
              }
              @media (max-width: 767px) {
                .side-frame{margin-right: 0%;margin-left: 0%;}
              }
              </style>
            <img src="{% if section.settings.profilepic == blank %}https://www.boodl.xyz/images/profile-male.jpg{%else%}{{ section.settings.profilepic | img_url: "master"}}{%endif%}" sizes="(max-width: 479px) 100vw, (max-width: 991px) 43vw, 35vw" alt="" class="frame-image reversed">
          </div>
        </div>
        <div class="side-content-small {{section.settings.onscrolltext}}">
          <h2 class="section-header">{{section.settings.titletext}}</h2>
          <p class="section-description">{{section.settings.content}}</p>
          {% if section.settings.showsignature %}
          <img src="{% if section.settings.signature == blank %}https://www.boodl.xyz/images/signature.png{% else %}{{section.settings.signature | img_url: "master"}}{%endif%}" width="175" alt="">
          {%endif%}
          <div class="signature-text">{{section.settings.signature_text}}</div>
        </div>
      </div>
    </div>
  </div>

