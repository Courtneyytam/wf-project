        "label": "Profile Picture"
    },
	{
		"id": "showsignature",
		"type": "checkbox",
		"label": "Show signature",
		"default": true
	},
    {
        "id": "signature",
        "type": "image_picker",
        "label": "Signature"
    },
	{
		"type": "text",
        "id": "signature_text",
        "label": "Signature name",
        "default": "â€” CEO of Boodl"
